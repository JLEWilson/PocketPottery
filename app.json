{
  "expo": {
    "name": "Pocket Pottery",
    "slug": "pocketpottery",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#B7CBB5"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app uses your chosen photos to use on your piece display."
        }
      ],
      "expo-sqlite",
      "expo-font",
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "windowBackground": {
                "light": "#ADC2A8",
                "dark": "#2e2e2e"
              },
              "colorAccent": {
                "light": "#78967A",
                "dark": "#78967A"
              },
              "colorControlActivated": {
                "light": "#B8CABF",
                "dark": "#464745"
              },
              "colorControlHighlight": {
                "light": "#B8CABF",
                "dark": "#464745"
              },
              "textColorPrimary": {
                "light": "#3C413C",
                "dark": "#B8CABF"
              },
              "textColorPrimaryInverse": {
                "light": "#B8CABF",
                "dark": "#3C413C"
              },
              "textColorSecondary": {
                "light": "#3C413C",
                "dark": "#3C413C"
              },
              "textColorSecondaryInverse": {
                "light": "#B8CABF",
                "dark": "#FF5722"
              },
              "selectableItemBackgroundBorderless": {
                "light": "#B8CABF",
                "dark": "#464745"
              }

            },
            "timePicker": {
              "background": { "light": "#FF5722", "dark": "#383838" },
              "numbersBackgroundColor": { "light": "#FF5722", "dark": "#383838" }
            }
          }
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ADC28A"
      },
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.jlewilson.pocketpottery"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "20b86be5-0977-40ce-b957-52066e56fbd2"
      }
    },
    "expo": {
      "splash": {
        "image": "./assets/splash.png",
        "backgroundColor": "#ADC28A"
      }
    },
    "newArchEnabled": true,
    "owner": "jlewilson"
  }
}
